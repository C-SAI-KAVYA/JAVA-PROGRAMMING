<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BridgelabzLoginAndRegisterProject</display-name>
  <welcome-file-list>
    <welcome-file>/WEB-INF/views/WelcomeToBridgelabz.jsp</welcome-file>
  </welcome-file-list>
  
  
  <listener>
  <listener-class>com.bridgelabz.blarp.controller.ContextListener</listener-class>
  </listener>
  
  <servlet>
  <servlet-name>home</servlet-name>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>home</servlet-name>
  <url-pattern>/homepage</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>register</servlet-name>
  <servlet-class>com.bridgelabz.blarp.controller.RegisterServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>register</servlet-name>
  <url-pattern>/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.bridgelabz.blarp.controller.LoginServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>reset</servlet-name>
  <servlet-class>com.bridgelabz.blarp.controller.ForgotPasswordServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>reset</servlet-name>
  <url-pattern>/reset</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>welcome</servlet-name>
  <servlet-class>com.bridgelabz.blarp.controller.WelcomeServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>welcome</servlet-name>
  <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  
    <servlet>
  <servlet-name>logout</servlet-name>
  <servlet-class>com.bridgelabz.blarp.controller.LogoutServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>logout</servlet-name>
  <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <filter>
  <filter-name>error</filter-name>
  <filter-class>com.bridgelabz.blarp.filter.CheckUserCredentialsFilter</filter-class>
  </filter>
  
  <filter-mapping>
  <filter-name>error</filter-name>
  <url-pattern>/login</url-pattern>
  </filter-mapping>
  
  <filter>
  <filter-name>resetfilter</filter-name>
  <filter-class>com.bridgelabz.blarp.filter.PasswordResetFilter</filter-class>
  </filter>
  
  <filter-mapping>
  <filter-name>resetfilter</filter-name>
  <url-pattern>/reset</url-pattern>
  </filter-mapping>  
  
    <filter>
  <filter-name>registerfilter</filter-name>
  <filter-class>com.bridgelabz.blarp.filter.RegistrationFilter</filter-class>
  </filter>
  
  <filter-mapping>
  <filter-name>registerfilter</filter-name>
  <url-pattern>/register</url-pattern>
  </filter-mapping>
  
  
</web-app>